{
    "get": {
        "user_id": {
            "rules": {
                "regexp": "/007/"
            },
            "default": ["some-user"]
        }
    },
    "post": {
        "username": {
            "rules": {
                "mandatory": true,
                "emptiness": false,
                "min-length": 4,
                "max-length": 4
            },
            "errorRules": [
                "max-length"
            ]
        },
        "alter": {
            "default": ["Doctor Who", "TARDIS"],
            "rules": {
                "mandatory": true
            }
        },
        "enemy": {
            "default": ["Dalek"]
        }
    }
}